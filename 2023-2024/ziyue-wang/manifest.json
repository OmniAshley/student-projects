{
    "manifest_version": 2,
    "name": "Sensemaking Extension",
    "version": "1.0",
    "description": "Enhance your browsing experience with customized sensemaking.",
    "permissions": ["activeTab", "storage", "http://*/", "https://*/", "http://localhost/*", "<all_urls>", "https://api.openai.com/"],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16x16.png",
        "48": "images/icon48x48.png",
        "128": "images/icon128x128.png"
      }
    },
    "background": {
      "scripts": ["knowledge-graph-api.js", "backup.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "images/icon16x16.png",
      "48": "images/icon48x48.png",
      "128": "images/icon128x128.png"
    }
  }
